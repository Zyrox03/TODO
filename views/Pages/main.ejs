<% layout('/layouts/boilerplate') -%>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-start h-100">
                <div class="col col-xl-10">

                    <div class="card oneTask">

                        <div class="UserName d-flex justify-content-center pt-3">
                            <%if(currentUser){%>
                                <h1>
                                    <a class="navbar-brand" href="/mytasks/<%= currentUser.username %>">
                                        <%= currentUser.username %>'s TODO list
                                    </a>

                                </h1>
                                <% }else{%>
                                    <a class="navbar-brand">TODO's</a>

                                    <% } %>
                        </div>

                     

                        <div class="card-body p-5">
                            <form action="/mytasks/<%= u.username %>" method="POST"
                                class="d-flex justify-content-center align-items-center mb-4">
                                <input type="text" name="task" id="task" class="form-control" placeholder="New task">

                                <button type="submit" class="btn btn-success ms-2">Add</button>
                            </form>



                            <!-- Tabs content -->
                            <div class="tab-content " id="ex1-content">
                                <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel"
                                    aria-labelledby="ex1-tab-1">
                                    <ul class="list-group mb-0">
                                        <% if(u.task.length){ %>
                                            <% for(task of u.task){ %>


                                                <li
                                                    class="list-group-item d-flex justify-content-between align-items-center border-0 mb-3 rounded">
                                                    <div class="col">
                                                        <%= task.task %>
                                                    </div>

                                                    <div
                                                        class="col-4 d-flex justify-content-end align-items-center">
                                                        <div class="text-center d-none d-md-flex">
                                                            <small>Added on : <%= task.moment %></small>
                                                        </div>

                                                        <form
                                                            action="/mytasks/<%= u.username %>/<%= task._id %>?_method=DELETE"
                                                            class="mx-3" method="POST">
                                                            <button class="btn btn-danger"><i
                                                                    class="fa-solid fa-xmark"></i></button>
                                                        </form>
                                                    </div>
                                                </li>
                                                <% } %>



                                                    <% }else{ %>
                                                        <li class="list-group-item d-flex justify-content-center align-items-center border-0 mb-3 rounded"
                                                            style="background-color: #f4f6f7;">

                                                            No tasks found


                                                        </li>
                                                        <% } %>

                                    </ul>

                                    <div class="col-6 offset-3">
                                        <%- include('../partials/flash') %>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            </div>
    </section>
    <script src="/validationBootstrap.js"></script>